                </li>
                <ul class="sub-menu collapse" id="payroll">
                    <li><a class="nav-link fs-6" asp-area="" asp-controller="Payroll" asp-action="Index">PayRoll List</a></li>
                    <li><a class="nav-link fs-6" asp-area="" asp-controller="Payroll" asp-action="Create">Create new</a></li>
                </ul>
                <!-- Dropdown for Leave -->
                <li class="nav-item">
                    <a class="btn " data-toggle="collapse" href="#leave" role="button" aria-expanded="false" aria-controls="leave">
                        Leave <span class="arrow"></span>
                    </a>
                </li>
                <ul class="sub-menu collapse" id="leave">
                    <li><a class="nav-link fs-6" asp-area="" asp-controller="Leave" asp-action="Index">Leave List</a></li>
                    <li><a class="nav-link fs-6" asp-area="" asp-controller="Leave" asp-action="Create">Create new</a></li>
                </ul>


                <!-- Dropdown for Services -->
                @* <li data-bs-toggle="collapse" data-bs-target="#service" class="collapsed">
                    <a href="#"><i class="fa fa-globe fa-lg"></i> Services <span class="arrow"></span></a>
                </li>
                <ul class="sub-menu collapse" id="service">
                    <li><a href="#">New Service 1</a></li>
                    <li><a href="#">New Service 2</a></li>
                </ul> *@

                <!-- Other items -->
                @* <li>
                    <a href="#">
